# 1) Build your React app
FROM node:20-alpine AS builder
WORKDIR /app

# install deps
COPY package*.json ./
RUN npm ci

# copy everything else (src/, vite.config.js, public/, etc.)
COPY . .
RUN echo "â†’ src/components:" && ls -l src/components
# build into /app/dist
RUN npm run build

# 2) Spin up nginx for static hosting
FROM nginx:stable-alpine
# replace default nginx.conf if you have one:
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# copy built output to nginx html dir
COPY --from=builder /app/dist /usr/share/nginx/html

# expose and run
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
